
lessThan x y = y < x;
moreThan x y = y >= x;

qsort li = case li of
  { Nil -> Nil
  ; Cons x xs -> 
       let { listLess = filter (lessThan x) xs
           ; listMore = filter (moreThan x) xs
           } 
       in append (qsort listLess) (Cons x (qsort listMore))
  };
  
inc x = x + 1;

main = qsort (reverse (take 3 (iterate inc 0)));

